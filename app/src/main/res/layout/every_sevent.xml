<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="fill_parent"
                android:layout_height="120dp">
    <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/iv_sevent_pic"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="fitXY" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:id="@+id/tv_sevent_class"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="14dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/iv_sevent_pic" android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/iv_sevent_pic"/>

    <TextView
            android:id="@+id/tv_sevent_name"
            android:textSize="25sp"
            android:layout_marginLeft="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_sevent_pic"
            android:layout_alignParentBottom="true" android:layout_below="@+id/tv_sevent_class"/>

</RelativeLayout>