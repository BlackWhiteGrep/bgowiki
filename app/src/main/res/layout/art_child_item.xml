<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_child_head"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_child_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/img_child_head"
        android:layout_toRightOf="@+id/img_child_head"
        android:text="TextView"
        android:layout_alignBottom="@+id/img_child_head"
        android:gravity="center|left"
        />

    <TextView
        android:id="@+id/tv_child_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textColor="@color/colorGery"
        android:layout_alignBottom="@+id/tv_child_name"
        android:gravity="center|right"
        />


</RelativeLayout>